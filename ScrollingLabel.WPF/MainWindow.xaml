<local:MainWindowBase x:Class="ScrollingLabel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rxui="http://reactiveui.net"
             xmlns:designVM="clr-namespace:ScrollingLabel.Design.ViewModels;assembly=ScrollingLabel.Design"
        xmlns:local="clr-namespace:ScrollingLabel.Views"
        d:DataContext="{d:DesignInstance Type=designVM:MainWindowViewModelDesign}"
        mc:Ignorable="d"
        Title="Customer List Scrolling Label" Height="450" Width="800">
    <rxui:RoutedViewHost HorizontalContentAlignment="Stretch"
                               VerticalContentAlignment="Stretch"
                               Router="{Binding Router}"/>
</local:MainWindowBase>
